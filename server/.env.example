# Database Configuration
# On macOS with Homebrew PostgreSQL, the default user is your macOS username (no password needed)
# On Linux, it's usually 'postgres' with a password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aisle_scan
DB_USER=akhilivaturi  # Change to your PostgreSQL username (usually your macOS username or 'postgres')
DB_PASSWORD=  # Leave empty for local development with peer authentication

# JWT Secret (change this to a random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# Server Configuration
PORT=3000
HOST=0.0.0.0
ENVIRONMENT=development

# CORS Configuration (for mobile app)
CORS_ORIGINS=*
